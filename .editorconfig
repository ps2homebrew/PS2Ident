# EditorConfig: http://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 4 spaces indentation
[*.{c,h,js,css,html}]
indent_style = space
indent_size = 4

# Tab indentation
[Makefile*,Rules*]
indent_style = tab
